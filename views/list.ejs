    <div class="box">
        <h1>Todo List</h1>
    </div>

    <div class="box">
        <% dayej.forEach(function(item) { %>
            <div class="item">
                <!-- Delete Checkbox -->
                <form action="/delete" method="POST">
                    <input type="checkbox" name="checkbox1" value="<%= item.id %>" onChange="this.form.submit()">
                </form>

                <% if (editId === item.id) { %>
                    <!-- Inline Edit Form -->
                    <form action="/" method="POST" style="flex: 1; display: flex;">
                        <input type="text" name="ele1" value="<%= item.name %>" required>
                        <input type="hidden" name="id" value="<%= item.id %>">
                        <button type="submit">✅</button>
                    </form>
                <% } else { %>
                    <!-- Display Task with Edit Button -->
                    <p style="flex: 1; margin: 0;"><%= item.name %></p>
                    <form action="/edit" method="POST">
                        <input type="hidden" name="id" value="<%= item.id %>">
                        <button type="submit" title="Edit Task">✏️</button>
                    </form>
                <% } %>
            </div>
        <% }); %>

        <!-- Add New Task -->
        <form class="item" action="/" method="POST">
            <input type="text" name="ele1" placeholder="Enter your item" required>
            <button type="submit">+</button>
        </form>
    </div>
    
    

    <script>
        function startEdit(id, name) {
            document.getElementById("editForm").style.display = "flex";
            document.getElementById("editId").value = id;
            document.getElementById("editName").value = name;
        }
    </script>

    <style>
       html {
